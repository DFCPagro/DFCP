{
  "name": "backend",
  "version": "1.0.0",
  "description": "Clean, scalable Express server using MongoDB (Mongoose), TypeScript, JWT auth (access + refresh rotation), cookie-based refresh, role-based auth, central error handling, request validation, and a domain-driven folder layout.",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc -p .",
    "test": "jest --passWithNoTests --runInBand",
    "test:int": "jest --config jest.int.config.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:clear": "jest --clearCache",
    "db:drop": "ts-node db/seeds/seed.reset.ts",
    "seed": "ts-node db/seeds/seed.ts",
    "seed:dev": "npm run seed -- --env dev",
    "seed:dev:reset": "npm run seed -- --env dev --reset",
    "seed:orders:20": "npm run seed -- --env dev --reset --orders 20",
    "seed:users-only": "npm run seed -- --env dev --reset --no-orders",
    "seed:orders-only": "npm run seed -- --env dev --reset --no-users",
    "typecheck": "tsc --noEmit",
    "seed:json:items": "node db/seeds/seed-from-json.js --file ./db/seeds/exports/items.json --collection items --upsert",
    "mongo:setup": "ts-node ./scripts/mongo/setup-rs.ts",
    "mongo:status": "ts-node ./scripts/mongo/status-rs.ts",
    "mongo:stop": "ts-node ./scripts/mongo/stop-rs.ts"
    "seed:shifts": "ts-node db/seeds/seedShiftConfig.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-jsdoc-swagger": "^1.8.0",
    "express-list-endpoints": "^7.1.1",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "get-port": "^7.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.19.0",
    "luxon": "^3.7.2",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/minimist": "^1.2.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.1.3",
    "jest-summarizing-reporter": "^1.1.4",
    "migrate-mongo": "^12.1.3",
    "minimist": "^1.2.8",
    "mongodb-memory-server": "^10.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}

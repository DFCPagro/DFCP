{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",                           
    "types": ["node", "express", "jest"],    // â¬… add jest types
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "db/**/*.ts",                         
    "scripts/**/*.ts",
    "tests/**/*.ts"       
  ],
  "exclude": ["node_modules", "dist"]
}
